    "definitions": {
        "cats.Cat": {
            "type": "object",
            "properties": {
                "breed": {
                    "type": "string",
                    "example": "Siamese"
                },
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "name": {
                    "type": "string",
                    "example": "Whiskers"
                },
                "salary": {
                    "type": "number",
                    "example": 50000
                },
                "years_of_experience": {
                    "type": "integer",
                    "example": 5
                }
            }
        },
        "cats.CreateCatRequest": {
            "type": "object",
            "required": [
                "breed",
                "name",
                "salary",
                "years_of_experience"
            ],
            "properties": {
                "breed": {
                    "type": "string",
                    "example": "Siamese"
                },
                "name": {
                    "type": "string",
                    "maxLength": 50,
                    "minLength": 2,
                    "example": "Whiskers"
                },
                "salary": {
                    "type": "number",
                    "minimum": 0,
                    "example": 50000
                },
                "years_of_experience": {
                    "type": "integer",
                    "maximum": 50,
                    "minimum": 0,
                    "example": 5
                }
            }
        },
        "cats.UpdateSalaryRequest": {
            "type": "object",
            "required": [
                "salary"
            ],
            "properties": {
                "salary": {
                    "type": "number",
                    "minimum": 0,
                    "example": 60000
                }
            }
        },
        "missions.AssignCatRequest": {
            "type": "object",
            "required": [
                "cat_id"
            ],
            "properties": {
                "cat_id": {
                    "type": "integer",
                    "example": 5
                }
            }
        },
        "missions.CreateMissionRequest": {
            "type": "object",
            "required": [
                "name",
                "targets"
            ],
            "properties": {
                "cat_id": {
                    "type": "integer",
                    "example": 5
                },
                "is_complete": {
                    "type": "boolean",
                    "example": false
                },
                "name": {
                    "type": "string",
                    "example": "Operation Stealth"
                },
                "targets": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/missions.CreateTarget"
                    }
                }
            }
        },
        "missions.CreateTarget": {
            "type": "object",
            "required": [
                "country",
                "name"
            ],
            "properties": {
                "country": {
                    "type": "string",
                    "example": "Russia"
                },
                "is_complete": {
                    "type": "boolean",
                    "example": false
                },
                "name": {
                    "type": "string",
                    "example": "Agent Smith"
                },
                "notes": {
                    "type": "string",
                    "example": "High priority target"
                }
            }
        },
        "missions.Mission": {
            "type": "object",
